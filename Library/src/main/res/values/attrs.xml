<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="TopBar">

        <attr name="menuRes" format="integer"/>


        <attr name="default_color" format="color"/>
        <attr name="active_color" format="color"/>

        <attr name="default_position" format="integer"/>


        <attr name="titlePadding" format="dimension"/>
        <attr name="titleSize" format="dimension"/>
        <attr name="titleMaxChars" format="integer"/>
        <attr name="titleFontFamily" format="integer"/>
        <attr name="titleGravity" format="integer">
            <flag name="bottom" value="80" />
            <flag name="center" value="17" />
            <flag name="center_horizontal" value="1" />
            <flag name="center_vertical" value="16" />
            <flag name="clip_horizontal" value="8" />
            <flag name="clip_vertical" value="128" />
            <flag name="end" value="8388613" />
            <flag name="fill" value="119" />
            <flag name="fill_horizontal" value="7" />
            <flag name="fill_vertical" value="112" />
            <flag name="left" value="3" />
            <flag name="right" value="5" />
            <flag name="start" value="8388611" />
            <flag name="top" value="48" />
        </attr>

        <attr name="titleActiveStyle" format="integer">
            <flag name="normal" value="0"/>
            <flag name="bold" value="1"/>
            <flag name="italic" value="2"/>
            <flag name="bold_and_italic" value="3" />
        </attr>

    </declare-styleable>
</resources>